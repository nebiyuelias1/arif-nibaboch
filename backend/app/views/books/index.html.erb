<div class="mb-12">
  <div class="max-w-3xl mx-auto text-center mb-8">
    <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight mb-4">Discover Your Next Favorite Book</h1>
    <p class="text-lg text-gray-500 max-w-2xl mx-auto">Explore a curated collection of timeless Ethiopian literature and modern classics.</p>
  </div>

  <div class="max-w-2xl mx-auto">
    <%= render partial: "books/search_bar" %>

    <%# Dynamic Filter Chips %>
    <div class="flex flex-wrap items-center justify-center gap-2">
      <%
        base_classes = "px-4 py-2 rounded-full text-sm font-medium cursor-pointer transition-colors"
        active_classes = "bg-blue-600 text-white shadow-sm"
        inactive_classes = "bg-white border border-gray-200 text-gray-600 hover:border-blue-500 hover:text-blue-600"
      %>

      <%# "All" link %>
      <%= link_to "All", books_path, class: "#{base_classes} #{@active_tag.blank? ? active_classes : inactive_classes}" %>

      <%# Links for each tag %>
      <% @tags.each do |tag| %>
        <%= link_to tag.name, books_path(tag: tag.name), class: "#{base_classes} #{@active_tag == tag.name ? active_classes : inactive_classes}" %>
      <% end %>
    </div>
  </div>
</div>

<% if @page.records.any? %>
  <div id="books_list" class="grid grid-cols-1 min-[450px]:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
    <%= render @page.records %>
  </div>

  <div id="pagination_placeholder">
    <% if @page.next_param %>
      <%= turbo_frame_tag "books_page_#{@page.next_param}", src: books_path(page: @page.next_param, format: :turbo_stream), loading: :lazy do %>
        <%= render partial: "books/pagination_placeholder" %>
      <% end %>
    <% end %>
  </div>

<% else %>
  <div class="text-center py-24 bg-gray-50 rounded-2xl border-2 border-dashed border-gray-200">
    <div class="mx-auto h-24 w-24 text-gray-300">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-full h-full">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
      </svg>
    </div>
    <h3 class="mt-4 text-lg font-semibold text-gray-900">No books found</h3>
  </div>
<% end %>
