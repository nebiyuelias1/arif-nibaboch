<div class="animate-pulse group relative flex flex-col bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden h-full">
  <%# Image Container Skeleton %>
  <div class="relative aspect-[2/3] w-full bg-gray-200"></div>

  <%# Card Body Skeleton %>
  <div class="flex flex-1 flex-col p-4">
    <div class="flex-1">
      <%# Title Skeleton %>
      <div class="h-5 bg-gray-200 rounded w-3/4 mb-2"></div>
      <div class="h-5 bg-gray-200 rounded w-1/2 mb-4"></div>

      <%# Author Skeleton %>
      <div class="h-4 bg-gray-100 rounded w-1/3 mb-4"></div>

      <%# Rating Row Skeleton %>
      <div class="flex items-center gap-1.5 mb-3">
        <div class="w-4 h-4 bg-gray-200 rounded-full"></div>
        <div class="h-4 bg-gray-200 rounded w-8"></div>
        <div class="h-3 bg-gray-100 rounded w-12"></div>
      </div>
    </div>

    <%# Footer Skeleton %>
    <div class="mt-3 pt-3 border-t border-gray-100 flex items-center justify-between">
      <div class="h-3 bg-gray-100 rounded w-12"></div>
      <div class="flex gap-3">
        <div class="w-5 h-5 bg-gray-100 rounded"></div>
        <div class="w-5 h-5 bg-gray-100 rounded"></div>
      </div>
    </div>
  </div>
</div>
